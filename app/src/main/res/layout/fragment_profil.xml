<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#124244"
    tools:context=".ProfilFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="120dp"
        android:text="Profil"
        android:layout_marginTop="21dp"
        android:textColor="@color/white"
        android:textSize="60dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="455dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp"
        android:background="#FFFF"
        android:orientation="vertical"
        android:padding="24dp">


        <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/baseline_pen_24"
           android:layout_marginLeft="220dp"/>

        <ImageView
            android:id="@+id/menu1"
            android:layout_width="165dp"
            android:layout_height="150dp"
            android:layout_marginLeft="60dp"
            android:paddingRight="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cipina" />

        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sylvina"
            android:textAlignment="center"
            android:textSize="20sp"/>
        <TextView
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cipina@gmail.com"
            android:textAlignment="center"
            android:layout_marginTop="4dp"/>


        <Button
            android:id="@+id/keluar"
            android:layout_width="187dp"
            android:layout_height="51dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#124244"
            android:drawableLeft="@drawable/baseline_logout_24"
            android:padding="8dp"
            android:text="Sign Out"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </LinearLayout>

</FrameLayout>